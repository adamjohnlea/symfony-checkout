{%  extends'layout.html.twig' %}

{% block content %}
    <h1>Homepage</h1>

    <div class="product-list">
        {% for bike in bikes %}
            <div>
                {% if bike.image %}
                <a href="/products/{{ bike.id }}">
                    <img src="/images/{{ bike.image }}" alt="{{ bike.name }}">
                </a>
                {% endif %}
                <a href="/products/{{ bike.id }}">
                    <h2>{{ bike.name }}</h2>
                </a>
                ${{ bike.price }}
            </div>
        {% endfor %}
    </div>

{% endblock %}